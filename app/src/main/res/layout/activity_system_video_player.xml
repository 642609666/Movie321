<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_system_video_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center"
    tools:context="com.example.administrator.movie321.SystemVideoPlayerActivity">

    <com.example.administrator.movie321.view.VideoView
        android:id="@+id/vv_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true" />

    <include layout="@layout/mediacontroller" />

    <include
        android:id="@+id/ll_loading"
        layout="@layout/loading" />
    <include
        android:id="@+id/ll_buffer"
        layout="@layout/buffer" />

</RelativeLayout>
